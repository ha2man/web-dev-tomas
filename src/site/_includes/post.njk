---
layout: layout
---

{# *-landing-page classes are a holdover from devsite. #} {# It would be great
to remove them as part of the v1 migration. #}
<div class="guide-landing-page">
  {% if hero %}
  <figure class="w-figure w-figure--hero">
    <img class="w-hero" src="{{ page.url + hero }}" alt="{{ alt }}" />
  </figure>
  {% endif %}

  {# Make sure Actions are first in the tab order. #}
  {% Actions %}
    {% ShareAction title, page.url | stripLanguage %}
    {% SubscribeAction %}
  {% endActions %}

  <div class="w-layout-container--narrow w-post-breadcrumbs">
    {% Breadcrumbs path %}
  </div>

  <main class="w-layout-container--narrow">
    <header class="w-article-header">
      <h1 class="w-article-header__headline">{{ title }}</h1>
      {% if description %}
      <p class="w-article-header__summary">
        {{ description }}
      </p>
      {% endif %} {% Author {post: page, author: authors[author], avatar:
      author, showSocialMedia: true} %}
    </header>
    {{ content | safe }}

    {# Hide tags for now. #} {#
    <div class="w-chips">
      <a class="w-chip" href="#">Artificial Intellegence</a>
      <a class="w-chip" href="#">User Experience</a>
      <a class="w-chip" href="#">Learning</a>
    </div>
    #}

    <div class="w-post-github-link w-mb--l">
      <span class="w-mr--sm">
        Last updated: <time>{{ page.date | prettyDate }}</time>
      </span>
      <a
        href="{{ page.inputPath | githubLink }}"
      >
        Improve article
      </a>
      {# Hide suggest translation for now. #} {#
      <a href="#">Suggest translation</a> #}
    </div>
  </main>

  {% if path.slug === 'blog' %}
    {# Find next blog post #}
    {% ArticleNavigation {
      back: '/blog',
      backLabel: 'Return to all articles',
      collection: collections.postDescending,
      slug: page.fileSlug
    } %}
  {% else %}
    {# Find next item in this learning path #}
    {% ArticleNavigation {
      back: '/' + path.slug,
      backLabel: 'Return to all articles',
      path: path,
      collection: collections[path.slug],
      slug: page.fileSlug
    } %}
  {% endif %}

